---
// Global imports
import { Separator } from '@/components/ui/separator';
import { getCollection } from 'astro:content';
import { GalleryHorizontalEnd, Wallet, LibraryBig, Users, ChevronRight } from "lucide-react";
import { Image } from "astro:assets";

import MainCarousel from '@/components/home/MainCarousel.tsx';
import BlogCard from '@/components/home/BlogCard.astro';
import Footer from '@/components/common/Footer.astro';
import LinkButton from '@/components/home/education/LinkButton.astro';
import BaseLayout from '@/layouts/BaseLayout.astro';

import cfe from '@/assets/images/convenios/cfe.png'
import cndh from '@/assets/images/convenios/logo_cndh.png'
import Lafayette from '@/assets/images/convenios/Lafayette.png'
import pemex from '@/assets/images/convenios/pemex.png'
import yumka from '@/assets/images/convenios/yumka.png'
import telmex from '@/assets/images/convenios/telmex.png'

const images = [
	{ src: "https://firebasestorage.googleapis.com/v0/b/upc-tabasco-2c495.firebasestorage.app/o/noticias%2Fblog-1.jpg?alt=media&token=e8c9da12-0988-450c-9bca-949d50d7ce43", alt: "" },
	{ src: "https://firebasestorage.googleapis.com/v0/b/upc-tabasco-2c495.firebasestorage.app/o/noticias%2Fblog-2.jpg?alt=media&token=f8eecea2-e630-4d9b-9883-36d5f62eb1a2", alt: "" },
	{ src: "https://firebasestorage.googleapis.com/v0/b/upc-tabasco-2c495.firebasestorage.app/o/noticias%2Fblog-3.jpg?alt=media&token=607c620d-6769-4784-8c29-68fb4c076ceb", alt: "" },
	{ src: "https://firebasestorage.googleapis.com/v0/b/upc-tabasco-2c495.firebasestorage.app/o/noticias%2Fblog-4.jpg?alt=media&token=3f1a9e4a-8470-41fb-9c94-e4e325d1efd9", alt: "" }
];

const degrees = await getCollection('degrees')

export const prerender = true
---

<BaseLayout>
	<main class="bg-neutral-50">
		<MainCarousel client:load video="trailer.mp4" images={images} />
	
		<section id="carreras" class="h-full w-full py-1" aria-label="Nuestras carreras destacadas">
			<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-7 gap-1 h-full w-full">
				{ degrees.map((item => {
						const { slug, data } = item
						const { title, subtitle, description, duration, modality, image } = data
	
						return (
							<a href={`carrera/${slug}`} class="relative flex justify-center w-full" title={title} >
								<div class="relative w-full">
									<img 
										transition:name={`img-${slug}`}
										src={`/images/${image}`}
										class="select-none transition-transform duration-300 transform w-full h-auto md:h-[160px] object-cover"
										alt={title}
										draggable="false"
										loading="lazy"
									>
									<div class="absolute inset-0 bg-red-600/70 hover:bg-red-600/10 flex items-center justify-center transition-opacity duration-200 opacity-100 hover:opacity-0">
										<h4 class="text-white text-lg font-semibold text-center px-2">{subtitle}</h4>
									</div>
								</div>
							</a>
						)
					})).sort()
				}
			</div>
		</section>
	
		<section id="educacion" class="py-16 sm:py-20">
			<div class="mx-auto max-w-7xl px-6 lg:px-8">
				<div class="mx-auto pb-10 max-w-2xl lg:mx-0">
					<h2 class="text-2xl sm:text-3xl font-semibold tracking-tight text-pretty text-neutral-900 ">Educación</h2>
				</div>
			</div>
			<div class="mx-auto max-w-7xl px-6 lg:px-8 grid grid-cols-1 lg:grid-cols-2 gap-9 items-center">
				<div>
					<Image 
						src="https://firebasestorage.googleapis.com/v0/b/upc-tabasco-2c495.firebasestorage.app/o/estaticos%2Feducacion.jpg?alt=media&token=28b6e8cd-a1f5-47c3-83ec-b1575fe44184"
						height={390}
						width={590}
						alt="Estudiante de mecanica automotriz" 
						draggable="false"
						loading="lazy"
					/>
				</div>
				<div class="prose">
					<h2 class="text-5xl font-semibold text-neutral-950">Oferta educativa</h2>
					<p class="mt-4 text-lg text-neutral-600">En la UPC formamos profesionales para el futuro, con educación técnica y humanista de alta calidad que responde a las demandas de sectores emergentes y tradicionales.</p>
					<div class="mt-10">
						<LinkButton 
							href="" 
							title="Hoy es el día" 
							text="Admisión" 
							icon={GalleryHorizontalEnd}	
						/>
						<LinkButton 
							href="" 
							title="Oferta educativa" 
							text="Oferta educativa" 
							icon={Users}	
						/>
						<LinkButton 
							href="" 
							title="Modelo educativo" 
							text="Modelo educativo" 
							icon={LibraryBig}	
						/>	
						<LinkButton 
							href="" 
							title="Becas" 
							text="Becas" 
							icon={Wallet}	
						/>							  
					</div>
				</div>
			</div>
			<div class="mx-auto max-w-7xl px-6 lg:px-8">
				<Separator className="mt-10" />
	
			</div>
		</section>
	
		<section id="noticias" >
			<div class="mx-auto max-w-7xl px-6 lg:px-8">
				<div class="mx-auto max-w-2xl lg:mx-0">
					<h2 class="text-2xl sm:text-3xl font-semibold tracking-tight text-pretty text-neutral-900">Noticias</h2>
					<p class="mt-2 prose text-lg/8 text-neutral-600">La UPC te muestra los eventos más relevantes que ocurren dentro de la Comunidad Universitaria y su entorno.</p>
				</div>
				<Separator className="my-10" />
				<div class="mx-auto grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 lg:mx-0 lg:max-w-none lg:grid-cols-3">
					<BlogCard
						date="Mar 16, 2020"
						category="Animación y Efectos Visuales"
						title="¡Expertos en animación en la UPC!"
						description="Julio César Hernández Méndez y Saúl Israel Landero García imparten la conferencia: “El proceso creativo en la realización de cortometrajes animados” a estudiantes de la UPC.Los #PapillonesRojos de la carrera de Ingeniería de Animación y Efectos Visuales se preparan para la creación de cortometrajes animados."
						authorName="Ana Karen García"
						authorRole="Dpto. de Difusión"
						link="#"
					/>
					<BlogCard
						date="Ene 25, 2025"
						category="Comunidad Universitaria"
						title="¡El Guardián Papillón está de vuelta!"
						description="Este jueves 23 de enero, estudiantes de la UPC se sumaron al día de Papillón ¡Vuelve el Guardián! organizado por la Secretaría de Cultura del Estado, este homenaje al majestuoso *Crocodylus acutus*, icono del estado de Tabasco. "
						authorName="Josué Darío Hernández"
						authorRole="Dpto. de Difusión"
						link="#"
					/>
					<BlogCard
						date="Ene 17, 2025"
						category="Administración"
						title="¡Gran Alianza!"
						description="La Universidad Politécnica del Centro firmó un convenio de colaboración con el Centro de Interpretación con la Naturaleza YUMKA ANP para que los #PapillonesRojos puedan realizar su servicio social en esta Área Natural Protegida de Tabasco. La firma de convenio estuvo a cargo del rector de la UPC, Mtro. José Luis Cortés Peñaloza y la M.C. Ana Victoria León Mendoza. "
						authorName="Diana Laura Hernández"
						authorRole="Dpto. de Difusión"
						link="#"
					/>
				</div>
			</div>
			<Separator className="my-10" />
		</section>
	
