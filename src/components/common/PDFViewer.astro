---
import { ExternalLink } from 'lucide-react';

export interface Props {
    file: string;
}

const { file } = Astro.props;
const pdfUrl = `${file}#toolbar=0`;
---

<div class="relative w-full h-full">
    <iframe
        src={pdfUrl}
        class="w-full h-full overflow-x-hidden border-none"
    ></iframe>

    <button
        class="absolute top-3 left-3 text-neutral-50 bg-neutral-900/70 px-3 py-1 hover:bg-neutral-800/95 transition-all flex items-center gap-2"
        onclick={`window.open("${file}", "_blank")`}
    >
        <ExternalLink size={18} />
        Abrir PDF
    </button>
</div>