        <!-- Sección 1: Información de contacto -->

        <div class="space-y-4">
            <h2 class="text-lg font-semibold">Contacto</h2>

            <div>
                <p class="text-gray-300">
                    Dirección:
                    <a class="hover:text-white" href="http://"
                        >Carretera Villahermosa Teapa, km 22.5</a
                    >
                </p>

                <p class="text-gray-300">
                    Teléfono:
                    <a class="hover:text-white" href="tel:+52 993 312 5893"
                        >+52 993 312 5893</a
                    >
                </p>

                <p class="text-gray-300">
                    Email:
                    <a
                        class="hover:text-white"
                        href="mailto:informes@updc.edu.mx"
                        >informes@updc.edu.mx</a
                    >
                </p>
            </div>
        </div>

        <!-- Sección 2: Enlaces importantes -->

        <div>
            <h2 class="text-lg font-semibold">Enlaces</h2>

            <ul class="mt-2 space-y-2">
                {
                    navigation.slice(2).map((item) => (
                        <li>
                            {" "}
                            <a
                                href={item.href}
                                class=" text-gray-300 hover:text-white hover:underline"
                            >
                                {item.name}
                            </a>{" "}
                        </li>
                    ))
                }
            </ul>
        </div>

