---
import { Separator } from "../ui/separator";
import { navigation, SITE_TITLE } from "@/const";
import { Image } from "astro:assets";

import Itaip from "@/assets/images/itaip.png";
import TransparenciaEstado from "@/assets/images/transparenciaestatal.png";
import TransparenciaNacional from "@/assets/images/transparencianacional.png";
